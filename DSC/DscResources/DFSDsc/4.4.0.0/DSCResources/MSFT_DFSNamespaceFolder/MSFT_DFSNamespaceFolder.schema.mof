[ClassVersion("1.0.0.0"), FriendlyName("DFSNamespaceFolder")]
class MSFT_DFSNamespaceFolder : OMI_BaseResource
{
    [Key, Description("Specifies a path for the root of a DFS namespace.")] String Path;
